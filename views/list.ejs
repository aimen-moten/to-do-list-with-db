<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>
    
    <div class="box">
        <form action="/delete" method="post">
            <% newListItems.forEach(function(thisitem){ %>
                <div class="item">
                    <input type="checkbox" onChange="this.form.submit()" name="checkedItem" value="<%=thisitem._id%>">
                    <p><%= thisitem.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
            <% })%>
        </form>
            
                
